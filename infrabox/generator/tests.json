{
    "version": 1,
    "jobs": [{
        "type": "docker-compose",
        "name": "api",
        "docker_compose_file": "../../infrabox/test/api/docker-compose.yml",
        "resources": { "limits": { "cpu": 1, "memory": 1024 } },
        "environment": {
            "CODECOV_TOKEN": { "$secret": "CODECOV_TOKEN" }
        },
        "cache": {
            "image": true
        }
    }, {
        "type": "docker-compose",
        "name": "docker-registry",
        "docker_compose_file": "../../infrabox/test-registry/docker-compose.yml",
        "resources": { "limits": { "cpu": 1, "memory": 1024 } },
        "cache": {
            "image": true
        }
    }, {
        "type": "docker-compose",
        "name": "registry-auth",
        "docker_compose_file": "../../infrabox/test/registry-auth/docker-compose.yml",
        "resources": { "limits": { "cpu": 1, "memory": 1024 } },
        "environment": {
            "CODECOV_TOKEN": { "$secret": "CODECOV_TOKEN" }
        },
        "cache": {
            "image": true
        }
    }, {
        "type": "docker",
        "name": "pyinfrabox",
        "build_context": "../..",
        "docker_file": "infrabox/test/pyinfrabox/Dockerfile",
        "build_only": false,
        "resources": { "limits": { "cpu": 1, "memory": 1024 } },
        "environment": {
            "CODECOV_TOKEN": { "$secret": "CODECOV_TOKEN" }
        },
        "cache": {
            "image": true
        }

    }, {
        "type": "docker",
        "name": "github-review",
        "build_context": "../..",
        "docker_file": "infrabox/test/github-review/Dockerfile",
        "resources": { "limits": { "cpu": 1, "memory": 1024 } },
        "build_only": false,
        "environment": {
            "CODECOV_TOKEN": { "$secret": "CODECOV_TOKEN" }
        },
        "cache": {
            "image": true
        }
    }]
}
